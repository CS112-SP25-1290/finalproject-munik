<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="root" prefHeight="1024.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.miracosta.cs112.finalproject.finalproject.controllers.GameController">
    <children>
        <ImageView fitWidth="1280" fitHeight="720">
            <image>
                <Image url="@images/Background.png" />
            </image>
        </ImageView>

        <ImageView fx:id="player" fitHeight="110.0" fitWidth="90.0" layoutX="640" layoutY="512">
            <image>
                <Image url="@images/Maggy.png" />
            </image>
        </ImageView>

        <VBox fx:id="statsBox" layoutX="10" layoutY="10" spacing="10.0" alignment="TOP_LEFT" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: rgba(255, 255, 255, 0.8);">
            <Label fx:id="nameLabel" text="Name: " />
            <Label fx:id="hpLabel" text="HP: " />
            <Label fx:id="dmgLabel" text="DMG: " />
            <Label fx:id="fireRateLabel" text="Fire Rate: " />
            <Label fx:id="luckLabel" text="Luck: " />
            <Label fx:id="coinsLabel" text="Coins: " />
            <Label fx:id="bombsLabel" text="Bombs: " />
            <Label fx:id="keysLabel" text="Keys: " />
            <Label fx:id="xLocation" text="X Loc: " />
            <Label fx:id="yLocation" text="Y Loc: " />
        </VBox>

    </children>
</Pane>

