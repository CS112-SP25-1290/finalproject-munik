<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.miracosta.cs112.finalproject.finalproject.controllers.CharacterSelectController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Select Your Character" style="-fx-font-size: 20px;"/>

    <!-- Character Selection Buttons -->
    <Button fx:id="character1Button" text="Character 1" onAction="#selectCharacter1"/>
    <Button fx:id="character2Button" text="Character 2" onAction="#selectCharacter2"/>
    <Button fx:id="character3Button" text="Character 3" onAction="#selectCharacter3"/>
    <Button fx:id="character4Button" text="Character 4" onAction="#selectCharacter4"/>

    <!-- Stats Display Area -->
    <VBox fx:id="statsBox" spacing="10.0" alignment="CENTER">
        <Label fx:id="nameLabel" text="Name: " />
        <Label fx:id="descLabel" text="Description: " />
        <Label fx:id="hpLabel" text="HP: " />
        <Label fx:id="dmgLabel" text="DMG: " />
        <Label fx:id="fireRateLabel" text="Fire Rate: " />
        <Label fx:id="pointsLabel" text="Score: " />
    </VBox>

    <Button fx:id="backButton" text="Back" onAction="#onBackButtonClick"/>
</VBox>