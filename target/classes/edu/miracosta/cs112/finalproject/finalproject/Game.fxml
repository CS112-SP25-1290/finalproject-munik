<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="root" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.miracosta.cs112.finalproject.finalproject.controllers.GameController">
    <children>
        <ImageView fitHeight="720" fitWidth="1280">
            <image>
                <Image url="@images/Background.png" />
            </image>
        </ImageView>

        <VBox fx:id="statsBox" alignment="TOP_LEFT" layoutX="1190.0" spacing="10.0" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: rgba(255, 255, 255, 0.8);">
            <Label fx:id="nameLabel" text="Name: " />
            <Label fx:id="hpLabel" text="HP: " />
            <Label fx:id="dmgLabel" text="DMG: " />
            <Label fx:id="pointsLabel" text="Points: " />
            <Label text="X Loc: " fx:id="xLocation" />
            <Label fx:id="yLocation" text="Y Loc: " />
        </VBox>

        <!-- Round information display -->
        <HBox alignment="TOP_LEFT" layoutX="20.0" layoutY="20.0" spacing="20.0" style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 10; -fx-border-color: black; -fx-border-width: 1;">
            <Label fx:id="roundLabel" style="-fx-font-size: 18;" text="Round: 0/40" />
            <Label fx:id="timerLabel" style="-fx-font-size: 18;" text="Next Round: 10s" />
        </HBox>

        <ImageView fx:id="player" fitHeight="110.0" fitWidth="90.0" layoutX="-20.0" layoutY="-7.0">
            <image>
                <Image url="@images/Maggy.png" />
            </image>
        </ImageView>
    </children>
</Pane>
